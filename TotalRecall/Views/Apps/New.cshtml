@model TotalRecall.Models.Application
<h2>@ViewData["Title"]</h2>

@Model

<form asp-controller="Apps" asp-action="New" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()
    <h4>Add a phone number.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="HideFromSearch" class="form-control"></label>
        <div class="col-md-10">
            <input asp-for="HideFromSearch" class="col-md-2 control-label" />
            <span asp-validation-for="HideFromSearch" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Send verification code</button>
        </div>
    </div>
</form>
