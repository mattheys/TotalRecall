@model TotalRecall.Models.Application
<div class="row">
    <form asp-controller="Apps" asp-action="New" method="post" >
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <p asp-validation-for="Name" class="text-danger"></p>
        </div>

        <div class="checkbox">
            <label asp-for="HideFromSearch">
                <input asp-for="HideFromSearch" />
                Hide From Search
            </label>
        </div>

        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-default">Create Application</button>
            </div>
        </div>
    </form>
</div>